<div class="main user-show">
  <div class="container">
    <div class="user">
    <img src="<%= "/user_images/#{@user.image_name}" %>">
    <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
    </div>
    <% if @user.id == @current_user.id %>
      <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <%= link_to("削除", "/users/#{@user.id}/destroy", {method: "post"}) %>
    <% end %>
  </div>
</div>
